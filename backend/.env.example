# Application Configuration
APP_NAME=TailorAI v2
APP_VERSION=2.0.0
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Directories (relative or absolute paths)
UPLOAD_DIR=./uploads
STATIC_DIR=./static
DATA_DIR=./data

# Session Management
SESSION_EXPIRE_MINUTES=60

# CORS Configuration (comma-separated list)
# Use "*" for development, specific origins for production
CORS_ORIGINS=*

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/tailorai.log

# Database (future use)
# DATABASE_URL=postgresql://user:password@localhost/tailorai

# Redis (future use for session management)
# REDIS_URL=redis://localhost:6379/0

# Calibration defaults
DEFAULT_CAMERA_DISTANCE_M=1.5
DEFAULT_CM_PER_PIXEL=0.26

# Measurement quality thresholds
MIN_VISIBILITY_THRESHOLD=0.5
MIN_CONFIDENCE_THRESHOLD=0.7
